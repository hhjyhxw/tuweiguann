<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.icloud.modules.shop.dao.ShopManMapper">


    <!-- 基础map -->
    <resultMap type="com.icloud.modules.shop.entity.ShopMan" id="BaseResultMap">
        <id property="id" column="id"/>
        <result property="shopId" column="shop_id"/>
        <result property="name" column="name"/>
        <result property="accountNo" column="account_no"/>
        <result property="mobile" column="mobile"/>
        <result property="pwd" column="pwd"/>
        <result property="role" column="role"/>
        <result property="status" column="status"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdTime" column="created_time"/>
        <result property="updatedBy" column="updated_by"/>
        <result property="updatedTime" column="updated_time"/>
    </resultMap>

    <!-- 基础字段列 -->
    <sql id="Base_Column_List" >
        id,shop_id,name,account_no,mobile,pwd,role,status,created_by,created_time,updated_by,updated_time,dept_id
    </sql>


    <select id="queryMixList" resultMap="BaseResultMap">
        select t.*,s.shop_name as "shop.shopName" from shop_man t,shop s
        <where>
            t.shop_id = s.id
            <if test="id != null">
                and t.id = #{id}
            </if>
            <if test="shopId != null">
                and t.shop_id = #{shopId}
            </if>
            <if test="name != null">
                and t.name like CONCAT('%', '${name}', '%')
            </if>
            <if test="accountNo != null">
                and t.account_no like CONCAT('%', '${accountNo}', '%')
            </if>
            <if test="mobile != null">
                and t.mobile like CONCAT('%', '${mobile}', '%')
            </if>
            <if test="pwd != null">
                and t.pwd = #{pwd}
            </if>
            <if test="role != null">
                and t.role = #{role}
            </if>
            <if test="status != null">
                and t.status = #{status}
            </if>
            <if test="createdBy != null">
                and t.created_by = #{createdBy}
            </if>
            <if test="createdTime != null">
                and t.created_time = #{createdTime}
            </if>
            <if test="updatedBy != null">
                and t.updated_by = #{updatedBy}
            </if>
            <if test="updatedTime != null">
                and t.updated_time = #{updatedTime}
            </if>
            <if test="shopName != null and shopName!=''">
                and s.shop_name like CONCAT('%', '${shopName}', '%')
            </if>
            <if test="startTime != null" >
                <![CDATA[ and t.created_time  >=  #{startTime}  ]]>
            </if>
            <if test="endTime != null" >
                <![CDATA[ and t.created_time  <=  #{endTime}  ]]>
            </if>
            <if test="sql_filter != null and sql_filter!=''">
                and ${sql_filter}
            </if>
        </where>
        order by t.created_time desc,t.updated_time desc
    </select>


</mapper>